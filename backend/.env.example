# Backend Environment Variables
# Copy this to .env and fill in your values

# Server
PORT=3000

# MongoDB
MONGODB_URI=mongodb://mongodb:27017/pickuplines
# For local development: mongodb://localhost:27017/pickuplines

# Admin Auth
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here

# AI Configuration (Optional)
# Option 1: Ollama (Local AI - requires Ollama installed)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.2

# Option 2: MiniMax Cloud API (Recommended for production)
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_BASE_URL=https://api.minimaxi.chat
